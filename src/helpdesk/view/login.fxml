<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="helpdesk.controller.LoginController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="300.0" prefWidth="300.0">
         <children>
            <Label alignment="CENTER" layoutX="1.0" layoutY="32.0" prefHeight="46.0" prefWidth="300.0" text="Helpdesk" textAlignment="CENTER">
               <font>
                  <Font size="17.0" />
               </font></Label>
            <Label layoutX="19.0" layoutY="98.0" text="Username" />
            <Label layoutX="21.0" layoutY="142.0" text="Password" />
            <Label fx:id="login_error" alignment="CENTER" layoutX="1.0" layoutY="180.0" prefHeight="40.0" prefWidth="300.0" text="Wrong username or password" textFill="#e10808" />
            <TextField fx:id="username" layoutX="80.0" layoutY="94.0" />
            <PasswordField fx:id="password" layoutX="80.0" layoutY="138.0" />
            <Button fx:id="login_button" layoutX="127.0" layoutY="230.0" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login" />
         </children>
      </Pane>
   </children>

</GridPane>
